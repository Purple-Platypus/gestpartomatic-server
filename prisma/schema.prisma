model Tag {
  id        Int           @id @default(autoincrement())
  label     String
  color     String
  todos     TagsOnTodos[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model TagsOnTodos {
  tag       Tag      @relation(fields: [tagId], references: [id])
  tagId     Int
  todo      Todo     @relation(fields: [todoId], references: [id])
  todoId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([tagId, todoId])
}

